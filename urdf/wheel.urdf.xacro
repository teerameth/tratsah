<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="torus_wheel">

	<xacro:macro name="omni_wheel" params="wheel_prefix *joint_pose">

		<link name="${wheel_prefix}_wheel_link">
			<inertial>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<mass value="0.2"/>
				<inertia ixx="0.00044" ixy="0.00014" ixz="0" iyy="0.00044" iyz="0" izz="0.0003"/>
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
				<mesh filename="file://$(find tratsah)/meshes/dae/Torus.dae" scale="0.2 0.2 0.2"/>
				</geometry>
				<material name="Black"/>
			</visual>
			<collision>
				<origin xyz="0 0 0" rpy="0 0 0"/>
				<geometry>
				<cylinder radius="0.25" length="0.1"/>
				</geometry>
				<surface>
					<bounce restitution_coefficient="0.0001" />
				</surface>
			</collision>
		</link>

		<gazebo reference="${wheel_prefix}_wheel_link">
			<mu1 value="0.2"/>
			<mu2 value="1.5"/>
			<kp value="10000000.0" />
			<kd value="10000.0" />
			<fdir1 value="0 0 1"/>
			<maxContacts value= "1"/>
		</gazebo>

		<joint name="${wheel_prefix}_wheel" type="continuous">
			<parent link="base_link"/>
			<child link="${wheel_prefix}_wheel_link"/>
			<xacro:insert_block name="joint_pose"/>
			<axis xyz="0 0 1" rpy="0 0 0" />
		</joint>

	</xacro:macro>
</robot>